<p id="notice"><%= notice %></p>

<h1>Country Information Setting</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Iso</th>
      <th>Lon</th>
      <th>Lat</th>
      <th>Zoom</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countryinfos.each do |countryinfo| %>
      <tr>
        <td><%= countryinfo.name %></td>
        <td><%= countryinfo.ISO %></td>
        <td><%= countryinfo.lon %></td>
        <td><%= countryinfo.lat %></td>
        <td><%= countryinfo.zoom %></td>
        <td><%= countryinfo.remark %></td>
        <td><%= link_to 'Show', countryinfo %></td>
        <td><%= link_to 'Edit', edit_countryinfo_path(countryinfo) %></td>
        <td><%= link_to 'Destroy', countryinfo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @countryinfos.size == 0 %>
<%= link_to 'New Countryinfo', new_countryinfo_path %>
<% else %>
<% end %>
