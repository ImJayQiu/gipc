<h1>Medical Items Management</h1>

<%= button_to 'New Medical Item', new_medicalitem_path, method: :get %>

<p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Safety</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicalitems.each do |medicalitem| %>
      <tr>
        <td><%= medicalitem.name %></td>
        <td><%= medicalitem.safety %> <%= medicalitem.unit %>/person/month</td>
        <td><%= link_to 'Show', medicalitem %></td>
        <td><%= link_to 'Edit', edit_medicalitem_path(medicalitem) %></td>
        <td><%= link_to 'Destroy', medicalitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>

