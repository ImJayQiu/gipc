<p id="notice"><%= notice %></p>

<h1>Living Supplies Management</h1>

<%= button_to 'New Record', new_livingsupply_path, method: :get %>

<p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Province</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livingsupplies.each do |livingsupply| %>
      <tr>
        <td><%= livingsupply.date %></td>
        <td><%= livingsupply.item %></td>
        <td><%= livingsupply.quantity %></td>
        <td><%= Livingitem.where(name: livingsupply.item).first.unit rescue nil %></td>
        <td><%= livingsupply.province %></td>
        <td><%= link_to 'Show', livingsupply %></td>
        <td><%= link_to 'Edit', edit_livingsupply_path(livingsupply) %></td>
        <td><%= link_to 'Del', livingsupply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>

<%= button_to 'New Record', new_livingsupply_path, method: :get %>
